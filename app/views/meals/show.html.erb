<div class="page-header">
  <h3>Meal #<%= @meal.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Dish</dt>
      <dd>
        <% if @meal.dish.present? %>
          <a href="/dishes/<%= @meal.dish_id %>">
            <%= @meal.dish.dishes %>
          </a>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @meal.venue.present? %>
          <a href="/venues/<%= @meal.venue_id %>">
            <%= @meal.venue.venue %>
          </a>
        <% end %>
      </dd>

      <dt>Neighborhood</dt>
      <dd>
        <% if @meal.neighborhood.present? %>
          <a href="/neighborhoods/<%= @meal.neighborhood_id %>">
            <%= @meal.neighborhood.hood %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/meals" class="btn btn-primary">
        Back
      </a>
      <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
